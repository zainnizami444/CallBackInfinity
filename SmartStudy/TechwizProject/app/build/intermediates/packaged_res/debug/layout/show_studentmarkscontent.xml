<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="100dp"
android:paddingLeft="10dp"
android:paddingRight="10dp" >

    <TableRow
        android:layout_width="223dp"
        android:layout_height="match_parent"
        android:background="#DAE8FC"

        android:padding="5dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity=""
            android:text="" />

        <Button
            android:id="@+id/btn_Add_Student_Marks"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_height="wrap_content"
            android:text="Add Marks" />
    </TableRow>
    <TableRow
        android:layout_width="223dp"
        android:layout_height="match_parent"
        android:background="#DAE8FC"
        android:padding="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Roll No" />



        <TextView
            android:id="@+id/txt_Student_RollNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </TableRow>

    <TableRow android:background="#DAE8FC" android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Student Name" />


        <TextView
            android:id="@+id/txt_Student_Name"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            />

</TableRow>
<TableRow android:background="#DAE8FC" android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Age" />

    <TextView
        android:id="@+id/txt_Student_Age"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        />

</TableRow>
<TableRow android:background="#DAE8FC" android:padding="5dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Email Address" />

    <TextView
        android:id="@+id/txt_Student_Email_Address"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        />


</TableRow>
    <TableRow android:background="#DAE8FC" android:padding="5dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Address" />

        <TextView
            android:id="@+id/txt_Student_Address"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            />


    </TableRow>
</TableLayout>