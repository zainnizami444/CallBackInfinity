<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/txt_Progress_StudentId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="Student Roll NO" />

    <TextView
        android:id="@+id/txt_Progress_StudentName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="Student Name" />
    <TextView
        android:id="@+id/txt_Progress_Subject"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="Student Name" />
    <TextView
        android:id="@+id/txt_Progress_Marks"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="Marks" />
    <TextView
        android:id="@+id/txt_Progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="Marks" />
    <Button
        android:id="@+id/btn_Progress_Edit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Edit"
        />
    <Button
        android:id="@+id/btn_Progress_Delete"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Delete"
        />
</LinearLayout>